<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/appbackground"
    tools:context=".PlaceDetailsActivity">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/eventlistbackground"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/formattedName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/textColor"
                    android:padding="3dp"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    android:textSize="18sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/destinationImage"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter" />
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:id="@+id/formattedAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor" />
                        <TextView
                            android:id="@+id/distanceAndTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor"
                            />
                        <TextView
                            android:id="@+id/formattedPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor"
                            />
                        <TextView
                            android:id="@+id/ratingAndOpen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColor" />
                        <Button
                            android:id="@+id/weeklyOpen"
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:background="#135f93"
                            android:text="Weekly Open"
                            android:textSize="12sp"
                            android:textColor="@color/textColor" />
                    </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </LinearLayout>
        <FrameLayout
            android:id="@+id/detailsMapContainer"
            android:layout_width="match_parent"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="130dp"
            android:layout_height="600dp" />
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/directionBottomsheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:behavior_hideable="false"
        app:behavior_peekHeight="100dp"
        android:background="@drawable/appbackground"
        app:behavior_skipCollapsed="true"
        app:layout_behavior="@string/bottom_sheet_behavior">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/directionDetailsContainer"
            android:layout_width="match_parent"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>